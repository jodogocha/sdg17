<p id="notice"><%= notice %></p>

<div class="box-header with-border">
  <h1><center>Tipos de Persona</center></h1>
</div>

<div class="box-body">

  <table class="table table-bordered table-hover table-responsive">
    <thead class="thead-inverse">
    <tr>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @tpersonas.each do |tpersona| %>
      <tr>
        <td><%= tpersona.tipo %></td>
        <td>
          <%= link_to tpersona, class: "btn btn-info", style:"color:white", title: 'Mostrar', 'data-toggle' => 'tooltip' do %>
              <spm class="glyphicon glyphicon-folder-open"></spm>
          <% end %>
          <%= link_to edit_tpersona_path(tpersona), class: "btn btn-warning", style:"color:white", title: 'Editar', 'data-toggle' => 'tooltip' do %>
              <spm class="glyphicon glyphicon-pencil"></spm>
          <% end %>
          <%= link_to tpersona, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger", style:"color:white", title: 'Borrar', 'data-toggle' => 'tooltip' do %>
              <spm class="glyphicon glyphicon-trash"></spm>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>