            <spm class="glyphicon small glyphicon-plus-sign"></spm>
          <% end %>
        </td>
      </tr>
    <% @esummaries.each do |esummary| %>
      <tr>
        <td><%= esumary.record.clasification.nombre %></td>
        <td><%= link_to 'Show', esummary %></td>
        <td><%= link_to 'Edit', edit_esummary_path(esummary) %></td>
        <td><%= link_to 'Destroy', esummary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>