    </thead>
    <tbody>
      <tr>
        <td>Solicitud de Nota</td>
        <td>2</td>
        <td>0</td>
        <td>
          <%= link_to new_record_path, class: "btn btn-info", style:"color:white", title: 'Recibir', 'data-toggle' => 'tooltip' do %>
            <spm class="glyphicon small glyphicon-plus-sign"></spm>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Solicitud de beca</td>
        <td>2</td>
        <td>8</td>
        <td>
          <%= link_to new_record_path, class: "btn btn-info", style:"color:white", title: 'Recibir', 'data-toggle' => 'tooltip' do %>
            <spm class="glyphicon small glyphicon-plus-sign"></spm>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Circular de Rectorado</td>
        <td>0</td>
        <td>1</td>
        <td>
          <%= link_to new_record_path, class: "btn btn-info", style:"color:white", title: 'Recibir', 'data-toggle' => 'tooltip' do %>
            <spm class="glyphicon small glyphicon-plus-sign"></spm>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Pedidos</td>
        <td>0</td>
