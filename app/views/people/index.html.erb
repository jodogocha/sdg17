<p id="notice"><%= notice %></p>

<div class="box-header with-border">
  <h1><center>Personas</center></h1>
</div>

<div class="box-body">

<table class="table table-bordered table-hover table-responsive">
  <thead class="thead-inverse">
    <tr>
      <th>Nombre y Apellido</th>
      <th>RUC o CI</th>
      <th>E-mail</th>
      <th>Contacto</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.nombre %></td>
        <td><%= person.ruc_ci %></td>
        <td><%= person.correo %></td>
        <td><%= person.direccion %></td>
        
        <td>
          <%= link_to person, class: "btn btn-info", style:"color:white", title: 'Mostrar', 'data-toggle' => 'tooltip' do %>
              <spm class="glyphicon small glyphicon-folder-open"></spm>
          <% end %>
          <%= link_to edit_person_path(person), class: "btn btn-warning", style:"color:white", title: 'Editar', 'data-toggle' => 'tooltip' do %>
              <spm class="glyphicon glyphicon-pencil small"></spm>
          <% end %>
          <%= link_to person, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger", style:"color:white", title: 'Borrar', 'data-toggle' => 'tooltip' do %>
              <spm class="glyphicon small glyphicon-trash small"></spm>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>