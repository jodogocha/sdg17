<div class="box box-primary">
  <div class="box-header with-border">
	<h1><center>Ver</center></h1>
  </div>
  <div class="box-body">
	  <div class="row">
		 <div class="col-md-12">
		    <label for="visto">Nombre: </label>
		      <%= @role.name %>
		 </div>
	  </div>

	  <div class="col-xs-12 modal-footer" >
	  	<%= link_to edit_role_path(@role), class: "btn btn-warning", "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Editar" do %>
	  	  <span class="glyphicon glyphicon-pencil"></span>
	  	<% end %>
	    <%= link_to roles_path, class: "btn btn-danger", "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Cancelar" do %>
	      <span class="glyphicon glyphicon-floppy-remove"></span>
	    <% end %>
	  </div>
	</div>
</div>