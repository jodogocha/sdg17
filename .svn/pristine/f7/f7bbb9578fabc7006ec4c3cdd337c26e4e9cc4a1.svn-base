<div class="box box-primary"> 
  <div class="box-header with-border">
    <h1>Tipos de Resoluciones</h1>
  </div>
  <p id="notice"><%= notice %></p>

    <div class="box-body">
      <div class="table-responsive">    
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th id="action-position">Acciones</th>
            </tr>
          </thead>

          <tbody>
            <% @resolutions_types.each do |resolutions_type| %>
              <tr class="w3-hover-blue">
                <td><%= resolutions_type.nombre %></td>
                <td align="right">
                  <%= link_to resolutions_type, class: "btn btn-primary", "data-toggle" => "tooltip", "data-placement" => "top", "title" => "Ver" do %>
                     <span class="glyphicon glyphicon-folder-open"></span>
                  <% end %>
                  <%= link_to edit_resolutions_type_path(resolutions_type), class: "btn btn-success", "data-toggle" => "tooltip", "data-placement" => "top", "title" => "Editar" do%>
                    <span class="glyphicon glyphicon-pencil"></span>
                  <% end %>
                  <%= link_to resolutions_type, method: :delete, data: { confirm: 'Está seguro?' }, class: "btn btn-danger", "data-toggle" => "tooltip", "data-placement" => "top", "title" => "Guardar" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                  </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <br>

    <div class="col-xs-12 modal-footer" >
      <%= link_to 'Nuevo Tipo de Resolución', new_resolutions_type_path, class: "btn btn-info" %>
    </div>

  </div> <!-- fin del formulario datos de resoluciones -->
</div>